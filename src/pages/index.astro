---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SliderServices from "../components/ServicesSlider.astro";
import Testimonials from "../components/Testimonials.astro";
import About from "../components/About.astro";
import Prices from "../components/Prices.astro";
import WhyChooseUs from "../components/WhyChooseUs.astro";
import Stats from "../components/Stats.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="NEAT Barber - Paris">
  <!-- Le Header contient maintenant la navbar, le Hero est séparé -->
  <Header />

  <!-- Slider Services Section -->
  <section id="services-slider">
    <SliderServices />
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials">
    <Testimonials />
  </section>

  <!-- About Section -->
  <section id="about">
    <About />
  </section>

  <!-- Pricing Section -->
  <section id="prices">
    <Prices />
  </section>

  <!-- Why Choose Us Section -->
  <section id="why-us">
    <WhyChooseUs />
  </section>

  <!-- Stats Section -->
  <section id="stats">
    <Stats />
  </section>

  <!-- Photo Gallery Section -->
  <section id="gallery">
    <PhotoGallery />
  </section>

  <Footer />
</Layout>
