---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SliderServices from "../components/SliderServices.astro";
import About from "../components/About.astro";
import ProServices from "../sections/ProServices.astro";
import WhyChooseUs from "../sections/WhyChooseUs.astro";
import Facts from "../components/Facts.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
import Pricing from "../components/Pricing.astro";
import GiftCards from "../components/GiftCards.astro";
---

<Layout title="Neat Barber Paris - Salon de coiffure moderne au cœur de Paris">
  <Header />

  <!-- Hero Section Start -->
  <div class="hero">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <!-- Hero Left Content Start -->
          <div class="hero-content">
            <div class="section-title">
              <h3 class="wow fadeInUp">Bienvenue chez Neat Barber</h3>
              <h1 class="text-anime">
                Découvrez votre style <br />moderne et unique
              </h1>
            </div>
            <div class="hero-content-body wow fadeInUp" data-wow-delay="0.5s">
              <p>
                Nous croyons que vos cheveux sont l'expression de votre
                personnalité. Nos coiffeurs expérimentés sont là pour vous aider
                à révéler votre véritable potentiel de style.
              </p>
              <ul>
                <li>01. Obtenez la coupe que vous méritez</li>
                <li>02. Style parfait garanti</li>
              </ul>
            </div>

            <div
              class="hero-content-footer wow fadeInUp"
              data-wow-delay="0.75s"
            >
              <a href="#" class="btn-default dark-bg">Réserver</a>
              <a href="#" class="btn-default dark-bg">Nous Contacter</a>
            </div>
          </div>
          <!-- Hero Left Content End -->
        </div>

        <div class="col-lg-6">
          <!-- Hero Image Start -->
          <div class="hero-image wow fadeInUp" data-wow-delay="0.75s">
            <figure class="hover-anime">
              <img src="/images/hero-img.jpg" alt="" />
            </figure>
          </div>
          <!-- Hero Image End -->
        </div>
      </div>

      <!-- Hero Scroll Down Arrow Start -->
      <div class="row">
        <div class="col-md-12 scrollsp">
          <a href="#aboutus" class="scroll-down"><span></span></a>
        </div>
      </div>
      <!-- Hero Scroll Down Arrow End -->
    </div>
  </div>
  <!-- Hero Section End -->

  <!-- Slider Services Section -->
  <SliderServices />

  <!-- About Section -->
  <About />

  <!-- Services Section -->
  <ProServices />

  <!-- Why Choose Us Section -->
  <WhyChooseUs />

  <!-- Pricing Section -->
  <Pricing />

  <!-- Facts Section -->
  <Facts />

  <!-- Photo Gallery Section -->
  <PhotoGallery />

  <!-- Gift Cards Section -->
  <GiftCards />

  <Footer />
</Layout>
