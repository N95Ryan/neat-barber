---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="404 - Page non trouvée | NEAT Barber Paris"
  description="La page que vous recherchez n'existe pas ou a été déplacée."
>
  <!-- Navbar Start -->
  <header class="main-header">
    <Navbar />
  </header>
  <!-- Navbar End -->

  <!-- Page 404 Start -->
  <div class="page-404">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 order-lg-1 order-2">
          <div class="page-404-content">
            <div class="section-title">
              <h3 class="wow fadeInUp">Oups !</h3>
              <h2 class="text-anime-style-3" data-cursor="-opaque">
                Page non trouvée
              </h2>
            </div>
            <div class="page-404-body">
              <p class="wow fadeInUp" data-wow-delay="0.25s">
                Désolé, la page que vous recherchez n'existe pas ou a été
                déplacée. Retournez à l'accueil pour découvrir nos services de
                barbier premium à Paris.
              </p>
              <div class="page-404-btn wow fadeInUp" data-wow-delay="0.5s">
                <a href="/" class="btn-default">Retour à l'accueil</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 order-lg-2 order-1">
          <div class="page-404-image">
            <figure class="image-anime reveal">
              <img src="/images/image-404.svg" alt="404 - Page non trouvée" />
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page 404 End -->

  <Footer />
</Layout>

<style>
  .page-404 {
    padding: 120px 0;
    min-height: calc(100vh - 400px);
    display: flex;
    align-items: center;
    background-color: #fff;
  }

  .page-404-content {
    padding-right: 30px;
  }

  .page-404-content .section-title h3 {
    color: rgba(107, 122, 107, 0.7);
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .page-404-content .section-title h2 {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 30px;
    color: #000;
  }

  .page-404-body p {
    font-size: 18px;
    line-height: 1.8;
    color: #666;
    margin-bottom: 40px;
  }

  .page-404-btn .btn-default {
    display: inline-block;
    padding: 16px 40px;
    background-color: #000;
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
    transition: all 0.3s ease;
    text-decoration: none;
    border: 2px solid #000;
  }

  .page-404-btn .btn-default:hover {
    background-color: rgba(107, 122, 107, 0.7);
    border-color: rgba(107, 122, 107, 0.7);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  }

  .page-404-image {
    text-align: center;
    padding-left: 30px;
  }

  .page-404-image figure {
    margin: 0;
  }

  .page-404-image img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 991px) {
    .page-404 {
      padding: 80px 0;
    }

    .page-404-content {
      padding-right: 0;
      text-align: center;
      margin-top: 40px;
    }

    .page-404-content .section-title h2 {
      font-size: 42px;
    }

    .page-404-image {
      padding-left: 0;
    }
  }

  @media (max-width: 767px) {
    .page-404-content .section-title h2 {
      font-size: 36px;
    }

    .page-404-content .section-title h3 {
      font-size: 20px;
    }

    .page-404-body p {
      font-size: 16px;
    }
  }
</style>
