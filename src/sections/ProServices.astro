---
// Composant ProServices pour la section "Services Professionnels"

// Interface pour les services
interface Service {
  name: string;
  icon: string;
  description: string;
  image: string;
}

// Services du salon
const services: Service[] = [
  {
    name: "Coupe & Coiffage",
    icon: "/images/service-1.svg",
    description: "Coupes sur mesure adaptées à votre style et à la forme de votre visage, réalisées avec précision par nos barbiers experts.",
    image: "/images/service-1.jpg"
  },
  {
    name: "Taille de Barbe",
    icon: "/images/service-2.svg",
    description: "Façonnage et entretien de barbe avec serviette chaude, huiles essentielles et finition parfaite pour un look impeccable.",
    image: "/images/service-2.jpg"
  },
  {
    name: "Soins du Visage",
    icon: "/images/service-3.svg",
    description: "Soins premium pour une peau éclatante, comprenant exfoliation, masque et massage relaxant adapté à votre type de peau.",
    image: "/images/service-3.jpg"
  }
];
---

<div class="pro-services py-24 bg-white" id="services">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <!-- Section Title Start -->
      <div class="section-title">
        <h3
          class="text-neutral-500 text-sm font-medium tracking-wider uppercase mb-4 animate-fade-in-up"
        >
          Services Professionnels
        </h3>
        <h2
          class="text-4xl lg:text-5xl font-bold text-neutral-900 leading-tight mb-6 animate-fade-in-up"
        >
          Notre expertise à votre service
        </h2>
      </div>
      <!-- Section Title End -->
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="service-card group">
          <div class="relative overflow-hidden rounded-2xl shadow-lg mb-6">
            <img 
              src={service.image} 
              alt={service.name} 
              class="w-full h-64 object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <!-- Service Icon -->
            <div class="absolute bottom-6 right-6 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
              <div class="w-16 h-16 bg-neutral-900 rounded-full flex items-center justify-center shadow-lg">
                <img
                  src={service.icon}
                  alt={service.name}
                  class="w-8 h-8"
                />
              </div>
            </div>
          </div>

          <div class="service-content px-2">
            <h3 class="text-2xl font-bold text-neutral-900 mb-4 group-hover:text-neutral-700 transition-colors duration-300">{service.name}</h3>
            <p class="text-neutral-600 leading-relaxed mb-6">
              {service.description}
            </p>
            <a href="#tarifs" class="inline-flex items-center text-neutral-900 font-medium hover:text-neutral-700 transition-colors duration-300">
              <span>Voir les tarifs</span>
              <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a
        href="#tarifs"
        class="btn-default inline-block px-8 py-4 border-2 border-neutral-900 text-neutral-900 rounded-lg hover:bg-neutral-900 hover:text-white transition-colors duration-300 font-medium"
      >
        Voir tous nos services
      </a>
    </div>
  </div>
</div>

<style>
  .service-card {
    transition: transform 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-10px);
  }
  
  @media (max-width: 768px) {
    .service-card {
      margin-bottom: 2rem;
    }
  }
</style>