---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="blog-header">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h1 class="section-title">{title}</h1>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}
      </div>
    </div>
  </div>
</section>

<style>
  /* Styles pour la section d'en-tÃªte du blog */
  .blog-header {
    background:
      linear-gradient(to right, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
      url("/images/background.webp") center/cover no-repeat;
    padding: 120px 0px 80px;
    margin-top: 80px;
    color: #ffffff;
    position: relative;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background-color: #ffffff;
    border-radius: 2px;
  }

  .section-subtitle {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 1.5rem auto 0;
    opacity: 0.9;
  }

  /* Responsive */
  @media (max-width: 991px) {
    .blog-header {
      padding: 100px 0 60px;
    }

    .section-title {
      font-size: 2.8rem;
    }
  }

  @media (max-width: 767px) {
    .blog-header {
      padding: 90px 0 50px;
    }

    .section-title {
      font-size: 2.2rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 575px) {
    .blog-header {
      padding: 80px 0 40px;
    }

    .section-title {
      font-size: 1.8rem;
    }

    .section-title::after {
      width: 60px;
      height: 2px;
      bottom: -8px;
    }
  }
</style>
