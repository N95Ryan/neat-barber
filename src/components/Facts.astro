---
// Composant Facts - Statistiques et chiffres clés du salon
---

<div class="fun-facts bg-gray-200">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-5">
        <!-- Section Title Start -->
        <div class="section-title">
          <h3 class="wow fadeInUp">Aperçu du Salon</h3>
          <h2 class="text-anime">Chiffres & Statistiques</h2>
        </div>
        <!-- Section Title End -->
      </div>

      <div class="col-lg-7">
        <div class="facts-counter">
          <div class="row">
            <div class="col-md-4">
              <!-- Counter Item Start -->
              <div class="facts-item wow fadeInUp" data-wow-delay="0.5s">
                <div class="icon-box">
                  <img src="/images/counter-1.svg" alt="Icône expérience" />
                </div>

                <h3><span class="counter">15</span>+</h3>
                <p>Années d'Expérience</p>
              </div>
              <!-- Counter Item End -->
            </div>

            <div class="col-md-4">
              <!-- Counter Item Start -->
              <div class="facts-item wow fadeInUp" data-wow-delay="0.75s">
                <div class="icon-box">
                  <img src="/images/counter-2.svg" alt="Icône clients" />
                </div>

                <h3><span class="counter">1500</span>+</h3>
                <p>Clients Satisfaits</p>
              </div>
              <!-- Counter Item End -->
            </div>

            <div class="col-md-4">
              <!-- Counter Item Start -->
              <div class="facts-item wow fadeInUp" data-wow-delay="1.0s">
                <div class="icon-box">
                  <img src="/images/counter-3.svg" alt="Icône équipe" />
                </div>

                <h3><span class="counter">8</span>+</h3>
                <p>Coiffeurs Experts</p>
              </div>
              <!-- Counter Item End -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
