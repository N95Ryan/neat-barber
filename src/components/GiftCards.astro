---
// GiftCards.astro - Section Cartes Cadeaux

// Interface pour les cartes cadeaux
interface GiftCard {
  title: string;
  description: string;
  price: string;
  image: string;
  features?: string[];
  buttonText?: string;
}

// Liste des cartes cadeaux
const giftCards: GiftCard[] = [
  {
    title: "Carte Découverte",
    description: "Offrez une première expérience NEAT avec notre carte découverte. Idéale pour faire découvrir notre salon à vos proches.",
    price: "À partir de 30€",
    image: "/images/gift-img-1.png",
    features: ["Coupe classique", "Accueil VIP", "Valable 6 mois"],
    buttonText: "Offrir cette carte"
  },
  {
    title: "Carte Premium",
    description: "Le cadeau parfait pour les occasions spéciales. Une expérience complète de barbier pour un moment de détente absolu.",
    price: "À partir de 60€",
    image: "/images/gift-img-2.png",
    features: ["Coupe signature", "Soin de barbe", "Serviette chaude", "Valable 1 an"],
    buttonText: "Offrir cette carte"
  }
];

// Options de personnalisation
const customOptions = [
  "Choisissez le montant",
  "Message personnalisé",
  "Emballage cadeau élégant",
  "Livraison à domicile possible"
];
---

<!-- Gift Cards Section Start -->
<div class="gift-cards-section py-24 bg-neutral-50" id="gift-cards">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <!-- Section Title Start -->
      <div class="section-title">
        <h3 class="text-neutral-500 text-sm font-medium tracking-wider uppercase mb-4 animate-fade-in-up">
          CARTES CADEAUX
        </h3>
        <h2 class="text-4xl lg:text-5xl font-bold text-neutral-900 leading-tight mb-6 animate-fade-in-up">
          Offrez une expérience unique
        </h2>
        <p class="text-neutral-600 text-lg max-w-3xl mx-auto animate-fade-in-up">
          Surprenez vos proches avec une carte cadeau NEAT. L'assurance d'un moment de détente et de style dans notre salon.
        </p>
      </div>
      <!-- Section Title End -->
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {giftCards.map((card, index) => (
        <div class="group mb-8 md:mb-0">
          <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="flex flex-col md:flex-row">
              <!-- Gift Card Image -->
              <div class="w-full md:w-2/5 relative overflow-hidden">
                <img 
                  src={card.image} 
                  alt={`Carte cadeau ${card.title}`} 
                  class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-110"
                  style="min-height: 300px;"
                />
                <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent md:bg-gradient-to-t md:from-black/50 md:to-transparent"></div>
                <div class="absolute top-6 left-6 md:top-auto md:bottom-6 md:left-6">
                  <span class="bg-white/90 text-neutral-900 font-bold py-2 px-4 rounded-lg backdrop-blur-sm">
                    {card.price}
                  </span>
                </div>
              </div>
              
              <!-- Gift Card Content -->
              <div class="w-full md:w-3/5 p-8">
                <h3 class="text-2xl font-bold text-neutral-900 mb-4">{card.title}</h3>
                <p class="text-neutral-600 mb-6">{card.description}</p>
                
                {card.features && (
                  <ul class="mb-8 space-y-2">
                    {card.features.map(feature => (
                      <li class="flex items-center text-neutral-700">
                        <svg class="w-5 h-5 text-neutral-900 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                )}
                
                <a 
                  href="#" 
                  class="inline-block px-6 py-3 bg-neutral-900 text-white rounded-lg hover:bg-neutral-800 transition-colors duration-300"
                >
                  {card.buttonText || "Acheter maintenant"}
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Custom Gift Card Section -->
    <div class="mt-16 bg-white rounded-2xl shadow-lg p-8 md:p-12">
      <div class="flex flex-col md:flex-row items-center">
        <div class="w-full md:w-1/2 md:pr-12 mb-8 md:mb-0">
          <h3 class="text-3xl font-bold text-neutral-900 mb-6">Créez votre carte cadeau personnalisée</h3>
          <p class="text-neutral-600 mb-8">
            Personnalisez votre cadeau selon vos envies. Choisissez le montant, ajoutez un message personnel et offrez une expérience NEAT sur mesure.
          </p>
          
          <ul class="mb-8 space-y-3">
            {customOptions.map(option => (
              <li class="flex items-center text-neutral-700">
                <svg class="w-5 h-5 text-neutral-900 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {option}
              </li>
            ))}
          </ul>
          
          <a 
            href="#" 
            class="inline-block px-8 py-4 bg-neutral-900 text-white rounded-lg hover:bg-neutral-800 transition-colors duration-300"
          >
            Personnaliser ma carte
          </a>
        </div>
        
        <div class="w-full md:w-1/2 relative">
          <div class="relative mx-auto max-w-sm transform-gpu transition-transform duration-600 hover:rotate-y-5 hover:rotate-x-5" style="transform-style: preserve-3d;">
            <div class="absolute inset-0 bg-gradient-to-br from-neutral-900 to-neutral-700 rounded-2xl transform rotate-3 scale-105 opacity-30"></div>
            <div class="relative bg-gradient-to-br from-neutral-900 to-neutral-700 rounded-2xl p-8 text-white shadow-xl">
              <div class="flex justify-between items-start mb-12">
                <div>
                  <h4 class="text-xl font-bold mb-1">Carte Cadeau</h4>
                  <p class="text-neutral-300 text-sm">Personnalisée</p>
                </div>
                <img src="/images/logo.svg" alt="NEAT" class="h-10 w-auto" />
              </div>
              
              <div class="mb-8">
                <p class="text-sm text-neutral-300 mb-1">Montant</p>
                <p class="text-3xl font-bold">100€</p>
              </div>
              
              <div class="flex justify-between items-end">
                <div>
                  <p class="text-sm text-neutral-300 mb-1">Pour</p>
                  <p class="font-medium">Votre nom</p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-neutral-300 mb-1">Valable jusqu'au</p>
                  <p class="font-medium">31/12/2024</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Gift Cards Section End -->

