---
// PhotoGallery component
import { galleryImages } from "../data/images";
---

<div class="photo-gallery">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- Section Title Start -->
        <div class="section-title">
          <h3>DÃ©couvrez nos locaux</h3>
